<h1><%= @ingredient.name %></h1>

<ul>
	<% @ingredient.allergens.each do |allergen| %>
	
	
		<li><a href="#"><%= allergen.name %></a></li> <!-- link to allergin show page eventually -->
	
	<% end %>
</ul>

<h2>Add Possible Allergens</h2>
<form action="<%= ingredient_url(@ingredient.id) %>" method="post">
	<input type="hidden" name="_method" value="patch">
	<%= auth_token %>

  <div class="input">
    <label for="allergen-name">Allergen</label>
		
		<input type="hidden" name="ingredient[name]" value="">
		
    <input type="text" id="allergen-name" name="allergen[name]" value="">
	</div>
	

  <div class="submit">
    <input type="submit" value="Submit">
  </div>
</form>
	