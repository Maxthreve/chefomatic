<p>
  <strong> Name: </strong>
  <%= @recipe.name %> <br>

  <!-- <%= @recipe.prep_time%>/ -->

</p>
<p>
<strong>Prep Time</strong>
<%= @recipe.prep_time %>

</p>
<h2> Add Recipe Ingredient </h2>
<%= form_for([@recipe, @recipe.recipe_ingredients.build]) do |f|%>
<p>
  <%= f.label :unit %>
  <%= f.text_field :unit %>
</p>
<p>
  <%= f.label :amount %>
  <%= f.text_field :amount %>
</p>
<p>
  <%= f.submit %>
</p>
<%end%>

<h2> Add Ingredient </h2>
<%= form_for([@ingredient, @ingredient.recipe_ingredients.build]) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
</p>


<% end %>

<%= link_to 'Back', recipes_path %>
  <%= link_to 'Edit', edit_recipe_path(@recipe) %>
